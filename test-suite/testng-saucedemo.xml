<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Saucedemo ecommerce playground website test suite" thread-count="5"
       parallel="tests" verbose="4">

    <listeners>
        <listener
                class-name="org.saucedemo.java.listeners.ExtentReportListener" />

    </listeners>

    <test name="Web Automation Demo tests with Playwright">
        <parameter name="browser" value="chromium" />
    <classes>
        <class name="org.saucedemo.tests.LoginPageTests"/>
    </classes>
</test>
</suite> <!-- Suite -->